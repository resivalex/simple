<h1>Articles</h1>
<%= form_for :article, url: articles_path, method: :post, remote: true do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :text %>
  <%= f.submit 'Add article', class: 'add-button' %>
<% end %>
<table class="table">
  <tr><th>Title</th><th>Text</th><th>Action</th></tr>
  <%= render partial: 'article', collection: @articles %>
</table>